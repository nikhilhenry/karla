#!/bin/bash
path=`dirname $BASH_SOURCE`

argumentManager () {
    case $1 in
        "ascii")
            if [[ -f $2 && $3 == "" ]]
            then
                python3 $path/support/convert.py $2
            elif [[ -f $2 ]]
            then
                python3 $path/support/convert.py $2 > $3
            else
                echo "inccorect file"
            fi
            ;;
        *)
            echo "error"
            ;;
    esac
}

argumentManager "$@"
